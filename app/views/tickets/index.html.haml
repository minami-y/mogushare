/ ここマッチングのロジックに応じて変わる
%div
  - @user_areas.each do |user_area|
    - user_area.area.users.each do |user|
      - if user.seller.present?
        - user.seller.tickets.each do |ticket|
          %div
            - if ticket.expiration_date > Time.current
              - ticket.shares.each do |share|
                - if share.quantity != 0
                  = link_to ticket_path(ticket.id) do
                    .ticket-item
                      %div
                      = mypage_profile_image(user)
                      = user.seller.official_name
                      %div
                      = share.menu
                      %div
                      #{share.price} 円
                      %div
                      = ticket.message
                      %div
                      受け渡し時間：
                      = ticket.event_date.strftime('%Y年%m月%d日　%H:%M')
                      %div
                      受け渡し場所：
                      = ticket.event_place
                      %div
                      = ticket.expiration_date.strftime('%Y年%m月%d日　%H:%M')
                      まで有効

= render 'shared/after_signup_footer'
