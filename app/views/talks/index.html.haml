-if @groups
  - @groups.each do |group|
    = link_to talk_path(group) do
      %div
      - group.users.each do |user|
        - if user.name != current_user.name
          .board.large
            .chat-board
              .cook_info
                = image_tag "blank.png"
              .chat-txt
                %span
                  = user.name
                %span
                  = group.latest_messages(group)
              .chat-time
                %span 1分前
