= form_for(@user) do |f|
  = render 'shared/error_messages'

  .submit-field
    .basic_info
      %p.comment お名前
      = f.text_field :name
      %p.comment メールアドレス
      = f.email_field :email
      %p.comment パスワード
      = f.password_field :password
      %p.comment パスワード確認用
      = f.password_field :password_confirmation

  .submit-button
    = f.submit "編集する"
